{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "../",
        "module": "commonjs",
        "noEmit": true,
        "moduleResolution": "node",
        "target": "es2016",
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "esnext"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*.ts",
        "**.ts",
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
